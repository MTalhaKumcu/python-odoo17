<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ChatGPT Views -->
        <record id="view_gpt_form" model="ir.ui.view">
            <field name="name">chatGPTview.form</field>
            <field name="model">chatgpt.model</field>
            <field name="arch" type="xml">
                <form string="ChatGPT Form">
                
                        <field name="user_input" placeholder="Type your message here..."/>
                        <button name="send_user_input" string="Send" type="object" class="btn-primary"/>
                        <field name="output_message" readonly="1"/>
                  
                </form>
            </field>
        </record>
    </data>
</odoo>

