<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Action for GPT Text Generation -->
        <record id="action_gpt_text_generation" model="ir.actions.server">
            <field name="name">Generate Text</field>
            <field name="model_id" ref="model_gpt_model"/>
            <field name="state">code</field>
            <field name="code">model.generate_text('Once upon a time, in a land far far away, there lived a brave knight.')</field>
        </record>

        <!-- Menu for GPT Text Generation -->
        <menuitem id="menu_gpt_text_generation" name="GPT Text Generation" sequence="10"/>
        <menuitem id="menu_gpt_text_generation_main" name="Text Generation" parent="menu_gpt_text_generation" sequence="1"/>
        <menuitem id="menu_gpt_text_generation_action" name="Generate Text" parent="menu_gpt_text_generation_main" action="action_gpt_text_generation"/>

    </data>
</odoo>
